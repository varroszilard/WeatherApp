        <NavigationPage>
            <x:Arguments>
                <CarouselPage PagesChanged="OnPageChanged">
                    <pages:WeatherDetails />
                    <pages:MainPage/>
                </CarouselPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>-->
</MasterDetailPage>